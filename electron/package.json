{
  "name": "monteur-webapp",
  "version": "1.0.0",
  "description": "Monteur WebApp – Offline-fähige Windows-App (Electron) mit lokaler SQLite-DB",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sql.js": "^1.10.0"
  },
  "build": {
    "appId": "de.kukla.monteur-webapp",
    "productName": "Monteur WebApp",
    "directories": { "output": "dist" },
    "files": ["main.js", "preload.js", "server.js", "version.json", "db/**", "public/**"],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
